{
  "name": "server",
  "description": "Backend for TunedIN.",
  "private": true,
  "main": "dist/src/server.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "dev": "pnpm start:services && cross-env HTTPS=true HOST=local.playtunedin-test.com PORT=3001 NODE_ENV=development nodemon --exec \"pnpm run clean && pnpm run build && pnpm run start:dev\" --watch src -e ts",
    "start": "node dist/src/server.js",
    "start:dev": "node --require dotenv/config dist/src/server.js",
    "start:services": "docker compose down && docker compose up --remove-orphans -d",
    "______TESTING_________________": "",
    "test": "vitest run --coverage=false",
    "test:coverage": "vitest run --coverage=true",
    "______LINTING_________________": "",
    "lint": "pnpm run lint:js && pnpm run lint:types",
    "lint:js": "eslint . --max-warnings=0",
    "lint:types": "tsc --noEmit",
    "______LIFECYCLE COMMANDS______": "",
    "generate-cert": "../../scripts/generateDevSSLCert.sh",
    "git:pre-push": "pnpm run test"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "ajv": "^8.12.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "node-fetch": "^2.6.12",
    "redis": "^4.6.7",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@types/node-fetch": "^2.6.4",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-v8": "^0.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.2",
    "vitest": "^0.32.2"
  },
  "license": "UNLICENSED"
}
