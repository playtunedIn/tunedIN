{
  "name": "server",
  "description": "Backend for SpotiSpy.",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env PORT=3001 concurrently \"tsc --watch\" \"node --watch dist/server.js\"",
    "start": "node dist/server.js",
    "______TESTING_________________": "",
    "test": "vitest run --coverage=false",
    "test:coverage": "vitest run --coverage=true",
    "______LINTING_________________": "",
    "lint": "pnpm run lint:js && pnpm run lint:types",
    "lint:js": "eslint . --max-warnings=0",
    "lint:types": "tsc --noEmit",
    "______LIFECYCLE COMMANDS______": "",
    "generate-cert": "../../scripts/generateDevSSLCert.sh",
    "git:pre-push": "pnpm run test"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "express": "^4.18.2",
    "redis": "^4.6.7",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.0.2",
    "vitest": "^0.32.2"
  },
  "license": "UNLICENSED"
}
